@model List<RestaurantBillingApp.Models.MenuItem>

<h2>Recipt</h2>
<table class="table table-striped">
    <tr>
        <th>Item</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Total</th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@(item.Price * item.Quantity)</td>
        </tr>
    }
</table>
<p><strong>Subtotal : </strong>Rs.@ViewBag.Subtotal</p>
<p><strong>Tax (5%) : </strong>Rs.@ViewBag.Tax</p>
<p><strong>Grand Total : </strong>Rs.@ViewBag.Total</p>

<a href="/Billing/Index" class="btn btn-primary">Add Bill</a> 
